{
  "name": "market-hub-server",
  "version": "1.0.0",
  "description": "The server for Market-Hub",
  "main": "build/index.js",
  "scripts": {
    "start": "node build/index.js",
    "test": "jest",
    "server": "nodemon",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./ -o ./build",
    "postinstall": "npm run build",
    "deploy": "git add . && git commit -m 'Heroku deploy' && git push heroku master"
  },
  "author": "Dillion Megida",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cloudinary": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-ip": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mailgun-js": "^0.22.0",
    "mongoose": "^5.9.2",
    "multer": "^1.4.2",
    "paystack-api": "^2.0.5",
    "sharp": "^0.27.0",
    "sharpdashboard-sdk-node": "^1.1.0",
    "shortid": "^2.2.15",
    "validator": "^12.2.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test"
    }
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mailgun-js": "^0.22.11",
    "@types/mongoose": "^5.10.3",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.14",
    "@types/sharp": "^0.26.1",
    "@types/shortid": "0.0.29",
    "ghooks": "^2.0.4",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "0.0.9",
    "typescript": "^4.1.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "."
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./index.ts",
    "ext": "ts, js",
    "engines": {
      "node": "12.16.3"
    }
  }
}
